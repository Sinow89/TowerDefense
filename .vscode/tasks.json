{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Clang build active file",
            "command": "clang",
            "args": [
                "-g",
                "-I",
                "C:/raylib/include",
                "-I${workspaceFolder}/include",
                "-L",
                "C:/raylib/lib",
                "-o",
                "${workspaceFolder}/MyGame.exe",
                "${file}",
                "-lraylib",
                "-lm",
                "-lwinmm",
                "-lgdi32",
                "-lopengl32"
            ],
            "problemMatcher": [
                "$clang"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task to build the project using Clang."
        },
        {
            "label": "Run clang-tidy",
            "type": "shell",
            "command": "clang-tidy",
            "args": [
                "${workspaceFolder}/main.c",
                "--",
                "-I",
                "C:/raylib/include",
                "-L",
                "C:/raylib/lib",
                "-lraylib",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Runs clang-tidy on the main.c file."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "compiler: cl.exe"
        }
    ],
    "version": "2.0.0"
}