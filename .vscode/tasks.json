    {
        "tasks": [
            {
                "type": "cppbuild",
                "label": "C/C++: zig.exe build active file",
                "command": "C:/zig/zig.exe",
                "args": [
                    "cc",
                    "-g",
                    "-I",
                    "C:/raylib/include",
                    "-L",
                    "C:/raylib/lib",
                    "-o",
                    "${workspaceFolder}/MyGame.exe",
                    "${file}",
                    "-lraylib",
                    "-lm"
                ],
                "options": {
                    "cwd": "C:/zig"
                },
                "problemMatcher": [
                    "$zig"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": false
                },
                "detail": "Task generated by Debugger."
            },
            {
                "label": "Run clang-tidy",
                "type": "shell",
                "command": "clang-tidy",
                "args": [
                    "${workspaceFolder}/main.c",
                    "--",
                    "-I",
                    "C:/raylib/include",
                    "-L",
                    "C:/raylib/lib",
                    "-lraylib",
                    "-lm"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": false
                },
                "detail": "Runs clang-tidy on the main.c file."
            }
        ],
        "version": "2.0.0"
    }